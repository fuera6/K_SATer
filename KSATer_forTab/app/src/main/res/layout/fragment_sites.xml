<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.sites.SitesFragment"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/suneung"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="155dp"
        android:src="@drawable/suneung"
        android:scaleType="fitXY"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/ebsi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="415dp"
        android:src="@drawable/ebsi"
        android:scaleType="fitXY"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/megastudy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="675dp"
        android:src="@drawable/megastudy"
        android:scaleType="fitXY"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/mimac"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="155dp"
        android:src="@drawable/mimac"
        android:scaleType="fitXY"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/etoos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="415dp"
        android:src="@drawable/etoos"
        android:scaleType="fitXY"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/jongro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="675dp"
        android:src="@drawable/jongro"
        android:scaleType="fitXY"
        android:background="@android:color/transparent" />

</FrameLayout>